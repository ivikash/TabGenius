{
  "manifest_version": 3,
  "name": "Tab Sorter",
  "version": "1.0",
  "description": "Sort and organize Chrome tabs based on title, URL, or content",
  "permissions": [
    "tabs",
    "tabGroups",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "icons/icon50.png",
      "48": "icons/icon50.png",
      "128": "icons/icon100.png"
    }
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "icons": {
    "16": "icons/icon50.png",
    "48": "icons/icon50.png",
    "128": "icons/icon100.png"
  }
}
